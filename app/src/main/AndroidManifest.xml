<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rentalapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.CreateAd" />
        <activity android:name=".ui.CreateUser" />
        <activity android:name=".ui.DisplayApartment" />
        <activity android:name=".ui.DisplayHouse" />
        <activity android:name=".ui.DisplayRoom" />
        <activity android:name=".ui.FilterApartment" />
        <activity android:name=".ui.FilterHouse" />
        <activity android:name=".ui.FilterRoom" />
        <activity android:name=".ui.FilterSelect" />
        <activity android:name=".ui.Payment" />
        <activity android:name=".ui.RentalList" />
        <activity android:name=".ui.RentOrPost" />
        <activity android:name=".ui.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>